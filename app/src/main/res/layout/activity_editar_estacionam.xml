<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nico.univerbiciandroid.editarEstacionamActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione la cantidad de estacionamientos disponibles:"
            android:id="@+id/textView11"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="24dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPickerEst"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_row="0"
                android:layout_column="16" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_row="0"
                android:layout_column="17" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_row="2"
                android:layout_column="1" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:id="@+id/botonActualiz"
                android:layout_row="2"
                android:layout_column="4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/botonCancela"
                android:layout_row="2"
                android:layout_column="15" />
        </GridLayout>

    </LinearLayout>
</RelativeLayout>
