<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nico.univerbiciandroid.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sprint 2"
        android:id="@+id/bienvenidoTextV"
        android:textSize="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estacionamientos"
        android:id="@+id/botonMapa"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/bienvenidoTextV"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mejor Ruta"
        android:id="@+id/buttonRuta"
        android:layout_below="@+id/botonMapa"
        android:layout_alignEnd="@+id/botonMapa"
        android:layout_alignStart="@+id/botonMapa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amigos cerca"
        android:id="@+id/buttonAmigos"
        android:layout_below="@+id/buttonRuta"
        android:layout_alignStart="@+id/buttonRuta"
        android:layout_alignEnd="@+id/buttonRuta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar mi perfil"
        android:id="@+id/buttonEditar"
        android:layout_below="@+id/buttonAmigos"
        android:layout_alignStart="@+id/buttonAmigos"
        android:layout_alignEnd="@+id/buttonAmigos" />


</RelativeLayout>
