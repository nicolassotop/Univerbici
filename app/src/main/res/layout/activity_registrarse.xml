<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<RelativeLayout
    android:layout_width="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nico.univerbiciandroid.RegistrarseActivity"
    android:nestedScrollingEnabled="true"
    android:scrollIndicators="right"
    android:layout_height="wrap_content">

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/textView9"
        android:scrollIndicators="right"
        android:nestedScrollingEnabled="true">

        <TextView
            android:layout_width="112dp"
            android:layout_height="27dp"
            android:text="Nombre"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombreIn"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/apellidoIn"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_row="2"
            android:layout_column="1"
            android:weightSum="1"
            android:id="@+id/grupoSex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:id="@+id/hombre"
                android:checked="false"
                android:textSize="15dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mujer"
                android:id="@+id/mujer"
                android:checked="false"
                android:textSize="15dp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:id="@+id/textView3"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nickIn"
            android:layout_row="5"
            android:layout_column="1"
            android:scrollIndicators="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:id="@+id/textView5"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/correoIn"
            android:layout_row="6"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passIn"
            android:layout_row="7"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:id="@+id/textView6"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="20dp" />

        <TextView
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_row="7"
            android:layout_column="0"
            android:text="Contraseña"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/dirIn"
            android:layout_row="8"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:id="@+id/textView7"
            android:layout_row="9"
            android:layout_column="0"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/telIn"
            android:layout_row="9"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento"
            android:id="@+id/textView8"
            android:layout_row="11"
            android:layout_column="0"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/nacimientoIn"
            android:layout_row="11"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:id="@+id/aceptaIn"
            android:layout_row="13"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/cancelaIn"
            android:layout_row="13"
            android:layout_column="1" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_marginStart="311dp"
            android:layout_row="0"
            android:layout_rowSpan="14"
            android:layout_alignParentStart="true"
            android:scrollIndicators="right"
            android:layout_column="2" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/textView9"
        android:textSize="22dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_alignParentStart="true"
        android:capitalize="words"
        android:visibility="visible"
        android:textColorLink="#0b0b0b"
        android:textColor="@color/abc_input_method_navigation_guard" />


</RelativeLayout>
</ScrollView>